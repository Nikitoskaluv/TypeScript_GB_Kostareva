{
  "extends": "./tsconfig-checks.json",
  "compilerOptions": {
    "strict": true,
    "outDir": "public/scripts",
    "target": "ES6",
    "moduleResolution": "node",
    "module": "ES6",
    "declaration": true,
    "declarationDir": "dist/rootTypes",
    "skipLibCheck": true,
    "allowJs": true,
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*"
  ]
}